                <a href="#" class="text-black-600 hover:underline mt-4 block">Read More</a>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="container mx-auto mt-16 px-6">
        <h2 class="text-4xl font-bold text-center mb-12" data-aos="fade-up">Get in Touch</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <form class="p-6 rounded-lg bg-white text-gray-800 shadow-lg" data-aos="fade-up">
                <div class="mb-4">
                    <label for="name" class="block text-lg font-semibold mb-2">Name</label>
                    <input type="text" id="name" name="name" class="w-full px-4 py-2 border rounded" required>
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-lg font-semibold mb-2">Email</label>
                    <input type="email" id="email" name="email" class="w-full px-4 py-2 border rounded" required>
                </div>
                <div class="mb-4">
                    <label for="message" class="block text-lg font-semibold mb-2">Message</label>
                    <textarea id="message" name="message" rows="4" class="w-full px-4 py-2 border rounded" required></textarea>
                </div>
                <button type="submit" class="btn btn-custom px-6 py-3 rounded-full bg-gray-600 hover:bg-gray-700 text-black-600">Send Message</button>
            </form>
            <div class="contact-info p-6 text-center" data-aos="fade-up" data-aos-delay="100">
