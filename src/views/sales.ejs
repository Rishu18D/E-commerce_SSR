<%- include('partials/header') %>

<main class="container mx-auto mt-10 px-4">
    <h2 class="text-4xl font-bold mb-10 text-center">Discover Our Latest Sales</h2>

    <% if (sales && sales.length === 0) { %>
        <div class="flex items-center justify-center h-64">
            <p class="text-gray-700 text-lg">No sales available at the moment.</p>
        </div>
    <% } else { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% sales.forEach(sale => { %>
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <img src="<%= sale.image %>" alt="<%= sale.name %>" class="w-full h-64 object-cover">
                    <div class="p-6">
                        <h3 class="text-2xl font-semibold mb-4"><%= sale.name %></h3>
                        <p class="text-gray-700 mb-2"><s>Original Price: $<%= sale.originalPrice.toFixed(2) %></s></p>
                        <p class="text-red-500 mb-2 font-semibold">Sale Price: $<%= sale.salePrice.toFixed(2) %></p>
                        <p class="text-gray-700 mb-4 leading-relaxed"><%= sale.description %></p>
                        
                        <!-- Link to product details -->
                        <a href="/shop" class="block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full text-center">View Product</a>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</main>

<%- include('partials/footer') %>
